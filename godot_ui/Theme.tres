[sub_resource type="StyleBoxEmpty" id="StyleBoxEmpty_1"]

; ============================================================
; 主题资源
; ============================================================

[resource]

; ---- Label 样式 ----
Label/colors/font_color = Color(1, 1, 1, 1)
Label/colors/font_outline_color = Color(0, 0, 0, 0.5)
Label/colors/font_shadow_color = Color(0, 0, 0, 0)
Label/constants/line_spacing = 3
Label/constants/outline_size = 0
Label/constants/shadow_offset_x = 1
Label/constants/shadow_offset_y = 1
Label/font_sizes/font_size = 16

; ---- Button 样式 ----
Button/colors/font_color = Color(0.9, 0.9, 0.9, 1)
Button/colors/font_disabled_color = Color(0.5, 0.5, 0.5, 1)
Button/colors/font_focus_color = Color(1, 1, 1, 1)
Button/colors/font_hover_color = Color(1, 1, 1, 1)
Button/colors/font_hover_pressed_color = Color(1, 1, 1, 1)
Button/colors/font_outline_color = Color(0, 0, 0, 0)
Button/colors/font_pressed_color = Color(0.8, 0.8, 0.8, 1)
Button/colors/icon_disabled_color = Color(0.5, 0.5, 0.5, 1)
Button/colors/icon_focus_color = Color(1, 1, 1, 1)
Button/colors/icon_hover_color = Color(1, 1, 1, 1)
Button/colors/icon_hover_pressed_color = Color(1, 1, 1, 1)
Button/colors/icon_normal_color = Color(0.9, 0.9, 0.9, 1)
Button/colors/icon_pressed_color = Color(0.8, 0.8, 0.8, 1)
Button/constants/h_separation = 4
Button/constants/icon_max_width = 0
Button/constants/outline_size = 0
Button/font_sizes/font_size = 16
Button/styles/disabled = SubResource("StyleBoxFlat_btn_normal")
Button/styles/focus = SubResource("StyleBoxEmpty_1")
Button/styles/hover = SubResource("StyleBoxFlat_btn_hover")
Button/styles/hover_pressed = SubResource("StyleBoxFlat_btn_hover")
Button/styles/normal = SubResource("StyleBoxFlat_btn_normal")
Button/styles/pressed = SubResource("StyleBoxFlat_btn_pressed")

; ---- LineEdit 样式 ----
LineEdit/colors/caret_color = Color(1, 1, 1, 1)
LineEdit/colors/clear_button_color = Color(0.6, 0.6, 0.6, 1)
LineEdit/colors/clear_button_color_pressed = Color(0.8, 0.8, 0.8, 1)
LineEdit/colors/font_color = Color(1, 1, 1, 1)
LineEdit/colors/font_outline_color = Color(0, 0, 0, 0)
LineEdit/colors/font_placeholder_color = Color(0.5, 0.5, 0.5, 1)
LineEdit/colors/font_selected_color = Color(1, 1, 1, 1)
