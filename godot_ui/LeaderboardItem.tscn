[gd_scene load_steps=3 format=3 uid="uid://leaderboard_item_shadow_mask"]

; ============================================================
; LeaderboardItem - 排行榜条目模板场景
; 用于脚本动态实例化
; ============================================================

[sub_resource type="StyleBoxFlat" id="StyleBoxFlat_item_normal"]
bg_color = Color(0.09, 0.09, 0.09, 0.5)
corner_radius_top_left = 4
corner_radius_top_right = 4
corner_radius_bottom_right = 4
corner_radius_bottom_left = 4

[sub_resource type="StyleBoxFlat" id="StyleBoxFlat_item_highlight"]
bg_color = Color(0.25, 0.2, 0.05, 0.3)
border_width_left = 1
border_width_top = 1
border_width_right = 1
border_width_bottom = 1
border_color = Color(0.6, 0.5, 0.2, 0.5)
corner_radius_top_left = 4
corner_radius_top_right = 4
corner_radius_bottom_right = 4
corner_radius_bottom_left = 4

[node name="LeaderboardItem" type="PanelContainer"]
custom_minimum_size = Vector2(400, 0)
theme_override_styles/panel = SubResource("StyleBoxFlat_item_normal")

[node name="ItemMargin" type="MarginContainer" parent="."]
layout_mode = 2
theme_override_constants/margin_left = 8
theme_override_constants/margin_top = 8
theme_override_constants/margin_right = 8
theme_override_constants/margin_bottom = 8

[node name="ItemHBox" type="HBoxContainer" parent="ItemMargin"]
layout_mode = 2
theme_override_constants/separation = 8

; 排名徽章 (圆形背景)
[node name="RankBadge" type="Label" parent="ItemMargin/ItemHBox"]
unique_name_in_owner = true
layout_mode = 2
custom_minimum_size = Vector2(24, 24)
theme_override_colors/font_color = Color(0, 0, 0, 1)
theme_override_font_sizes/font_size = 12
text = "1"
horizontal_alignment = 1
vertical_alignment = 1

; 玩家名称
[node name="PlayerName" type="Label" parent="ItemMargin/ItemHBox"]
unique_name_in_owner = true
layout_mode = 2
size_flags_horizontal = 3
theme_override_colors/font_color = Color(1, 1, 1, 1)
theme_override_font_sizes/font_size = 14
text = "无名刺客"

; Stage 值
[node name="StageValue" type="Label" parent="ItemMargin/ItemHBox"]
unique_name_in_owner = true
layout_mode = 2
theme_override_colors/font_color = Color(0.4, 0.8, 0.4, 1)
theme_override_font_sizes/font_size = 14
text = "Stage 1"

; 击杀数
[node name="KillsValue" type="Label" parent="ItemMargin/ItemHBox"]
unique_name_in_owner = true
layout_mode = 2
theme_override_colors/font_color = Color(0.9, 0.4, 0.4, 1)
theme_override_font_sizes/font_size = 14
text = "0 kills"
