LineEdit/constants/caret_width = 1
LineEdit/constants/minimum_character_width = 4
LineEdit/constants/outline_size = 0
LineEdit/font_sizes/font_size = 16
LineEdit/styles/focus = SubResource("StyleBoxFlat_lineedit_focus")
LineEdit/styles/normal = SubResource("StyleBoxFlat_lineedit_normal")
LineEdit/styles/read_only = SubResource("StyleBoxFlat_lineedit_normal")

; ---- Panel 样式 ----
Panel/styles/panel = SubResource("StyleBoxFlat_panel_dark")

; ---- PanelContainer 样式 ----
PanelContainer/styles/panel = SubResource("StyleBoxFlat_panel_dark")

; ---- ScrollContainer 样式 ----
ScrollContainer/styles/panel = SubResource("StyleBoxEmpty_1")
